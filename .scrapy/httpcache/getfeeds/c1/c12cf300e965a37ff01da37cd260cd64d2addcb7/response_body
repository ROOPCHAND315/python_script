  function handleRadio(event, show_id, hide_id) {
    if (event.target.value === "on") {
      document.getElementById(show_id).style.display = "block";
      document.getElementById(hide_id).style.display = "none";
    }
  }
  function updateScore(x) {
    count++;
    if (x) {
      score++;
    } else {
      score;
    }
    if (count === 5) {
      document.getElementById("score").innerHTML = score;
      document.getElementById("scoreContainer").style.display = "block";
    }
  }
  function disableRadios(arr) {
    for (let i = 0; i < arr.length; i++) {
      arr[i].disabled = "true";
    }
  }
  function handleCorrectAnswer(correct) {
    correct.classList.add("correct");
  }
  function handleWrongAnswer(correct, wrong) {
    correct.classList.add("correct_not_selected");
    wrong.classList.add("incorrect");
  }
  const a1_1 = document.getElementById("a1_1");
